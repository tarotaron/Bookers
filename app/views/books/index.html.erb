<section class="book">
	<h1>Books</h1>
      <table border="0" width="950px">
      	<tr>
      	  <th>Title</th>
      	  <th>Body</th>
      	  <th></th>
      	</tr>
        <% @books.each do |book| %>
         <tr>
          <td>
      	    <%= book.title %>
      	  </td>
          <td>
      	    <%= book.body %>
      	  </td>
          <td>
            <%= link_to "Show",book_path(book) %> 
            <%= link_to "Edit",edit_book_path(book) %>
             <%= link_to "Destroy", book_path(book), method: :delete %>
         </td>
        </tr>
        <% end %>
      </table>
</section>

        <div class="new">
        <h3>New book</h3>
<!-- form_for部分 -->
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

        <%= form_for(@book) do |f| %>
 
          <h4>Title</h4>
          <%= f.text_field :title %>
 
           <h4>Body</h4>
           <%= f.text_area :body %>
           <br> 
           <%= f.submit 'Create Book' %>
             <% if flash[:notice] %>
             <div class="flash">
             <%= link_to "Show",book_path(book) %> 
             </div>
             <% end %>
 
           <% end %>
           </div>
